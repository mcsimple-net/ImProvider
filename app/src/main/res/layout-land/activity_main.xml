<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context="com.itremedy.improvidermtfree.MainActivity">


    <LinearLayout
        android:id="@+id/LayoutHostName"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/dark_background_card_view"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textViewIP"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|end"
            android:text="@string/host_or_ip"
            android:textColor="#C8C8C8"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/hostname"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:ems="10"
            android:hint="@string/enter_ip_or_hostname"
            android:inputType="text"
            android:textColor="#C8C8C8"
            android:textColorHighlight="#FFFFFF"
            android:textColorHint="#464646"
            android:textColorLink="#000000"
            android:textSize="16sp"
            android:background="@null"
            android:autofillHints="192.168.88.1" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LayoutPortNumber"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/dark_background_card_view"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LayoutHostName">

        <TextView
            android:id="@+id/textViewPort"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|right"
            android:text="@string/port"
            android:textColor="#C8C8C8"
            android:textSize="16sp"
            tools:ignore="RtlHardcoded" />

        <EditText
            android:id="@+id/port"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:ems="10"
            android:hint="@string/enter_port_number"
            android:inputType="number"
            android:textColor="#C8C8C8"
            android:textColorHighlight="#FFFFFF"
            android:textColorHint="#464646"
            android:textColorLink="#000000"
            android:textSize="16sp"
            android:background="@null"
            android:autofillHints="22" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LayoutUserName"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/dark_background_card_view"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LayoutPortNumber">

        <TextView
            android:id="@+id/textViewUser"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|right"
            android:text="@string/username"
            android:textColor="#C8C8C8"
            android:textSize="16sp"
            tools:ignore="RtlHardcoded" />

        <EditText
            android:id="@+id/username"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:ems="10"
            android:hint="@string/enter_username"
            android:inputType="text"
            android:textColor="#C8C8C8"
            android:textColorHighlight="#FFFFFF"
            android:textColorHint="#464646"
            android:textColorLink="#000000"
            android:textSize="16sp"
            android:background="@null"
            android:autofillHints="admin" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LayoutPassword"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/dark_background_card_view"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LayoutUserName">

        <TextView
            android:id="@+id/textViewPassword"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|right"
            android:text="@string/password"
            android:textColor="#C8C8C8"
            android:textSize="16sp"
            tools:ignore="RtlHardcoded" />

        <EditText
            android:id="@+id/password"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPassword"
            android:hint="@string/enter_password"
            android:textColor="#C8C8C8"
            android:textColorHighlight="#FFFFFF"
            android:textColorHint="#464646"
            android:textColorLink="#000000"
            android:textSize="16sp"
            android:background="@null"
            android:autofillHints="itremedy.online" />
    </LinearLayout>

    <Button
        android:id="@+id/connect"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#E2703A"
        android:fontFamily="@font/abhaya_libre_semibold"
        android:text="@string/connect"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/LayoutPortNumber"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/new_router_setup"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="#E2703A"
        android:fontFamily="@font/abhaya_libre_semibold"
        android:text="@string/setup_new_router"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/LayoutUserName"
        app:layout_constraintTop_toBottomOf="@+id/connect" />

    <Button
        android:id="@+id/start_page"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="#E2703A"
        android:fontFamily="@font/abhaya_libre_semibold"
        android:text="@string/hyperlink"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/LayoutUserName"
        app:layout_constraintTop_toBottomOf="@+id/new_router_setup" />

    <TextView
        android:id="@+id/help_wifi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:text="@string/need_help"
        android:textColor="@color/text_color"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="200dp"
        android:onClick="itemClicked"
        android:text="@string/save"
        android:textColor="@color/text_color"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LayoutPassword" />

</androidx.constraintlayout.widget.ConstraintLayout>