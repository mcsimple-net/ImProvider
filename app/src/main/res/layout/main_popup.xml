    <TextView
        android:id="@+id/textViewEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:contextClickable="false"
        android:elegantTextHeight="true"
        android:fontFamily="@font/play"
        android:gravity="center"
        android:text="@string/email_customercare_mcsimple_net"
        android:textColor="@color/text_color"
        android:textColorHighlight="@color/for_improvider"
        android:textIsSelectable="false"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/textViewManual"
        app:layout_constraintStart_toStartOf="@+id/textViewManual"
        app:layout_constraintTop_toBottomOf="@+id/textViewManual" />


